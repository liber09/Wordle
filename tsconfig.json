{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "rootDir": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "moduleResolution":"node",
    "jsx": "react-jsx"
  },
  "ts-node": {
      "esm": true,
      "experimentalSpecifierResolution": "node",
    }
}