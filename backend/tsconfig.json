{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "rootDir": "./",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "allowImportingTsExtensions": true,
      "noEmit": true,
      "moduleResolution":"NodeNext"
    },
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node",
      }
  }